<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="customCategory"
            type="com.kakeibo.settings.category.edit.CustomCategoryViewModel" />
    </data>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    
        <TextView
            android:id="@+id/txv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:paddingTop="@dimen/fragment_padding"
            android:text="@string/choose_category_color"/>
    
        <TextView
            android:id="@+id/txv_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_below="@id/txv_title"/>
    
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal"
            android:paddingStart="@dimen/fragment_padding"
            android:paddingEnd="@dimen/fragment_padding"
            android:paddingTop="@dimen/fragment_padding"
            android:paddingBottom="@dimen/fragment_padding">
    
            <Button
                android:id="@+id/btn_income"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:gravity="center_vertical|end"
                android:text="@string/income"
                android:textColor="@android:color/black"
                android:background="@drawable/gradient_income"
                style="?android:attr/buttonBarButtonStyle" />
    
            <Button
                android:id="@+id/btn_expense"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:gravity="center_vertical|end"
                android:text="@string/expense"
                android:textColor="@android:color/black"
                android:background="@drawable/gradient_expense"
                style="?android:attr/buttonBarButtonStyle" />
    
        </LinearLayout>
    
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerInParent="true"
            bind:customCategory="@{customCategory}">
    
            <ImageView
                android:id="@+id/imv_category_add_in"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:contentDescription="@string/category"
                android:src="@drawable/ic_overlay_add"
                android:visibility="invisible"
                style="?android:attr/buttonBarButtonStyle"/>
    
            <ImageView
                android:id="@+id/imv_category_add_ex"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:contentDescription="@string/category"
                android:src="@drawable/ic_overlay_add"
                android:visibility="invisible"
                style="?android:attr/buttonBarButtonStyle"/>

        </LinearLayout>
    
        <RelativeLayout
            android:id="@+id/rll_footer"
            android:layout_width="match_parent"
            android:layout_height="@dimen/tab_height"
            android:layout_alignParentBottom="true"
            android:background="@color/colorBackground">
    
            <Button
                android:id="@+id/btn_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:text="@string/back"
                android:textColor="@color/colorBlack"
                android:background="@color/colorBackground"
                android:contentDescription="@string/back"/>
    
            <Button
                android:id="@+id/btn_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:text="@string/next"
                android:textColor="@color/colorBlack"
                android:background="@color/colorBackground"
                android:contentDescription="@string/next"/>
    
        </RelativeLayout>
    
    </RelativeLayout>
    
</layout>