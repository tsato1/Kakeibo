<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="reportCListRowModel"
            type="com.kakeibo.ui.model.ReportCListRowModel" />
        <variable
            name="categoryViewModel"
            type="com.kakeibo.ui.viewmodel.CategoryStatusViewModel" />
    </data>

    <LinearLayout
        android:id="@+id/lnl_row_list_report_c"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_category_list_row_height"
        android:paddingRight="@dimen/list_row_padding_horizontal"
        android:paddingLeft="@dimen/list_row_padding_horizontal">

        <ImageView
            android:id="@+id/imv_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/category"
            bind:context="@{context}"
            bind:categoryCode="@{reportCListRowModel.categoryCode}"
            bind:masterMap="@{categoryViewModel.allMap}"/>

        <TextView
            android:id="@+id/txv_category"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:layout_gravity="start"
            android:textColor="@color/color_black"
            bind:context="@{context}"
            bind:categoryCode="@{reportCListRowModel.categoryCode}"
            bind:colon="@{false}"
            bind:masterMap="@{categoryViewModel.allMap}"/>

        <TextView
            android:id="@+id/txv_amount"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textColor="@color/color_black"
            bind:context="@{context}"
            bind:amount="@{reportCListRowModel.amount.toString()}"
            bind:colon="@{false}"/>

        <ImageView
            android:id="@+id/imv_percent"
            android:layout_width="@dimen/item_category_list_row_height"
            android:layout_height="@dimen/item_category_list_row_height"
            android:layout_marginStart="@dimen/imv_percent_margin_horizontal"
            android:layout_marginEnd="@dimen/imv_percent_margin_horizontal"
            android:contentDescription="@string/percent"
            android:background="@{reportCListRowModel.color}"/>

        <TextView
            android:id="@+id/txv_percent"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textColor="@color/color_black"
            android:text="@{reportCListRowModel.percentage}" />

    </LinearLayout>

</layout>