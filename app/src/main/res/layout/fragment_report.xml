<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="itemViewModel"
            type="com.kakeibo.ui.viewmodel.ItemViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent">

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/srl_reload"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="2dp"
            android:background="@color/color_background"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/lnl_report_switches"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <include
                        layout="@layout/banner_date_picker"
                        android:id="@+id/banner_date_picker"/>

                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="60dp"
                        android:paddingVertical="2dp">

                        <TableRow>

                            <ImageView
                                android:layout_width="@dimen/small_imv_square_sides"
                                android:layout_height="@dimen/small_imv_square_sides"
                                android:src="@drawable/dot_color_primary"
                                android:contentDescription="@string/income_colon"/>

                            <TextView
                                android:id="@+id/txv_income_colon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/income_colon"
                                android:textColor="@color/color_black"
                                android:textStyle="bold"/>

                            <TextView
                                android:id="@+id/txv_income"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="end"
                                android:textColor="@color/color_black"
                                android:textStyle="bold"
                                bind:context="@{context}"
                                bind:amount="@{itemViewModel.income.toString()}"
                                bind:colon="@{false}"/>

                        </TableRow>

                        <TableRow>

                            <ImageView
                                android:layout_width="@dimen/small_imv_square_sides"
                                android:layout_height="@dimen/small_imv_square_sides"
                                android:src="@drawable/dot_color_accent"
                                android:contentDescription="@string/expense_colon"/>

                            <TextView
                                android:id="@+id/txv_expense_colon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/expense_colon"
                                android:textColor="@color/color_black"
                                android:textStyle="bold"/>

                            <TextView
                                android:id="@+id/txv_expense"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="end"
                                android:textColor="@color/color_black"
                                android:textStyle="bold"
                                bind:context="@{context}"
                                bind:amount="@{itemViewModel.expense.toString()}"
                                bind:colon="@{false}"/>

                        </TableRow>

                        <TableRow>

                            <ImageView
                                android:layout_width="@dimen/small_imv_square_sides"
                                android:layout_height="@dimen/small_imv_square_sides"
                                android:src="@drawable/dot_color_background"
                                android:contentDescription="@string/expense_colon"/>

                            <TextView
                                android:id="@+id/txv_balance_colon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/balance_colon"
                                android:textColor="@color/color_black"
                                android:textStyle="bold"/>

                            <TextView
                                android:id="@+id/txv_balance"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="end"
                                android:textColor="@color/color_black"
                                android:textStyle="bold"
                                bind:context="@{context}"
                                bind:amount="@{itemViewModel.balance.toString()}"
                                bind:colon="@{false}"/>

                        </TableRow>

                    </TableLayout>

                    <include
                        layout="@layout/fragment_report_date_monthly"
                        android:id="@+id/fragment_report_date_monthly" />

                    <include
                        layout="@layout/fragment_report_category_monthly"
                        android:id="@+id/fragment_report_category_monthly"
                        android:visibility="gone" />

                    <include
                        layout="@layout/fragment_report_category_yearly"
                        android:id="@+id/fragment_report_category_yearly"
                        android:visibility="gone"/>

                    <include
                        layout="@layout/fragment_report_date_yearly"
                        android:id="@+id/fragment_report_date_yearly"
                        android:visibility="gone"/>

                </LinearLayout>

            </androidx.core.widget.NestedScrollView>

        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

        <LinearLayout
            android:id="@+id/lnl_report_switches"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:background="@color/color_emboss"
            app:layout_constraintTop_toBottomOf="@id/srl_reload"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <Button
                android:id="@+id/btn_date_monthly"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                style="?android:attr/buttonBarButtonStyle"/>

            <Button
                android:id="@+id/btn_category_monthly"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                style="?android:attr/buttonBarButtonStyle"/>

            <Button
                android:id="@+id/btn_category_yearly"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:visibility="gone"
                style="?android:attr/buttonBarButtonStyle"/>

            <Button
                android:id="@+id/btn_date_yearly"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"
                android:visibility="gone"
                style="?android:attr/buttonBarButtonStyle"/>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
