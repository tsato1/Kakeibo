<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txv_from_date"
        android:layout_width="@dimen/search_criteria_txv_width"
        android:layout_height="@dimen/search_criteria_1_row_height"
        android:layout_alignParentStart="true"
        android:layout_alignBaseline="@id/btn_from_date"
        android:text="@string/from_colon"
        android:textStyle="bold"/>
    <Button
        android:id="@+id/btn_from_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/txv_from_date"
        android:textStyle="bold"
        style="?android:attr/buttonBarButtonStyle" />

    <TextView
        android:id="@+id/txv_to_date"
        android:layout_width="@dimen/search_criteria_txv_width"
        android:layout_height="@dimen/search_criteria_1_row_height"
        android:layout_alignParentStart="true"
        android:layout_alignBaseline="@id/btn_to_date"
        android:layout_below="@id/txv_from_date"
        android:text="@string/to_colon"
        android:textStyle="bold"/>
    <Button
        android:id="@+id/btn_to_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_from_date"
        android:layout_toEndOf="@id/txv_to_date"
        android:textStyle="bold"
        style="?android:attr/buttonBarButtonStyle"/>

    <TextView
        android:id="@+id/txv_category"
        android:layout_width="@dimen/search_criteria_txv_width"
        android:layout_height="@dimen/search_criteria_1_row_height"
        android:layout_alignParentStart="true"
        android:layout_alignBaseline="@id/btn_category"
        android:layout_below="@id/txv_to_date"
        android:text="@string/category_colon"
        android:textStyle="bold"/>
    <Button
        android:id="@+id/btn_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_to_date"
        android:layout_toEndOf="@id/txv_to_date"
        android:textStyle="bold"
        style="?android:attr/buttonBarButtonStyle"/>

    <TextView
        android:id="@+id/txv_memo"
        android:layout_width="@dimen/search_criteria_txv_width"
        android:layout_height="@dimen/search_criteria_1_row_height"
        android:layout_alignBaseline="@id/edt_memo_search"
        android:layout_alignParentStart="true"
        android:layout_below="@id/txv_category"
        android:text="@string/memo_colon"
        android:textStyle="bold"/>
    <EditText
        android:id="@+id/edt_memo_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_category"
        android:layout_toEndOf="@id/txv_to_date" />
</RelativeLayout>