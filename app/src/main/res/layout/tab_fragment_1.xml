<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/btn_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="#000000"
        style="?android:attr/buttonBarButtonStyle"/>

    <GridLayout
        android:id="@+id/grd_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:rowCount="2">
        <Button
            android:id="@+id/btn_income"
            android:drawableTop="@mipmap/ic_launcher"
            android:text="@string/income"/>
        <Button
            android:id="@+id/btn_income2"
            android:drawableTop="@mipmap/ic_launcher"
            android:text="@string/income"/>
        <Button
            android:id="@+id/btn_income3"
            android:drawableTop="@mipmap/ic_launcher"
            android:text="@string/income"/>
        <Button
            android:id="@+id/btn_income4"
            android:drawableTop="@mipmap/ic_launcher"
            android:text="@string/income"/>
        <Button
            android:id="@+id/btn_income5"
            android:drawableTop="@mipmap/ic_launcher"
            android:text="@string/income"/>
        <Button
            android:id="@+id/btn_income6"
            android:drawableTop="@mipmap/ic_launcher"
            android:text="@string/income"/>
        <Button
            android:id="@+id/btn_income7"
            android:drawableTop="@mipmap/ic_launcher"
            android:text="@string/income"/>
        <Button
            android:id="@+id/btn_income8"
            android:drawableTop="@mipmap/ic_launcher"
            android:text="@string/income"/>
    </GridLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableRow>
            <EditText
                android:id="@+id/edt_amount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/btn_voice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="voice_tmp"/>
        </TableRow>
    </TableLayout>

</LinearLayout>