<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/col_root_fragment3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_background_search">

        <TextView
            android:id="@+id/txv_inst_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/fab_default_padding"
            android:text="@string/inst_tap_plus_to_add_criteria"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_search_criteria"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>