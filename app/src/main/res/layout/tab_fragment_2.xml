<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBackground">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="?android:attr/buttonBarStyle">
        <ImageButton
            android:id="@+id/btn_prev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_left_arrow"
            style="?android:attr/buttonBarButtonStyle"/>
        <Button
            android:id="@+id/btn_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:textStyle="bold"
            style="?android:attr/buttonBarButtonStyle"/>
        <ImageButton
            android:id="@+id/btn_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_right_arrow"
            style="?android:attr/buttonBarButtonStyle"/>
    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="100dp"
        android:paddingLeft="100dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp">
        <TableRow>
            <TextView
                android:text="Income:"
                android:textColor="@color/colorBlack"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/txv_income"
                android:layout_weight="1"
                android:gravity="right"
                android:textColor="@color/colorBlack"
                android:textStyle="bold"/>
        </TableRow>
        <TableRow>
            <TextView
                android:text="Expense:"
                android:textColor="@color/colorBlack"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/txv_expense"
                android:layout_weight="1"
                android:gravity="right"
                android:textColor="@color/colorBlack"
                android:textStyle="bold"/>
        </TableRow>
        <TableRow>
            <TextView
                android:text="Balance:"
                android:textColor="@color/colorBlack"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/txv_balance"
                android:layout_weight="1"
                android:gravity="right"
                android:textColor="@color/colorBlack"
                android:textStyle="bold"/>
        </TableRow>
    </TableLayout>

    <ExpandableListView
        android:id="@+id/lsv_expandable"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <FrameLayout
        android:id="@+id/scv_subtotal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.echo.holographlibrary.PieGraph
                android:id="@+id/graph_subtotal"
                android:layout_width="match_parent"
                android:layout_height="150dp"/>
            <ListView
                android:id="@+id/lsv_subtotal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>

    </FrameLayout>


    <LinearLayout
        android:id="@+id/lnl_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <!--<ImageButton
            android:id="@+id/btn_voice_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_action_voice"/>-->
        <EditText
            android:id="@+id/edt_search"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Search from Memo"
            android:maxLength="30"/>
        <ImageButton
            android:id="@+id/btn_search"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/ic_action_search"
            android:background="@color/colorBackground"/>
    </LinearLayout>

</LinearLayout>