<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/col_root_fragment2"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@color/colorBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="?android:attr/buttonBarStyle">
            <ImageButton
                android:id="@+id/btn_prev"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:src="@drawable/ic_left_arrow"
                android:contentDescription="@string/previous"
                style="?android:attr/buttonBarButtonStyle"/>
            <ImageButton
                android:id="@+id/btn_exit_search_result"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentStart="true"
                android:background="@drawable/button_roundcorner"
                android:src="@drawable/ic_close_white"
                android:contentDescription="@string/close"
                style="?android:attr/buttonBarButtonStyle"/>
            <Button
                android:id="@+id/btn_date"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textStyle="bold" />
            <ImageButton
                android:id="@+id/btn_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_right_arrow"
                android:contentDescription="@string/next"
                style="?android:attr/buttonBarButtonStyle"/>
        </RelativeLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="100dp"
            android:paddingLeft="100dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp">
            <TableRow>
                <TextView
                    android:id="@+id/txv_income_colon"
                    android:text="@string/income_colon"
                    android:textColor="@color/colorBlack"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/txv_income"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:textColor="@color/colorBlack"
                    android:textStyle="bold"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:id="@+id/txv_expense_colon"
                    android:text="@string/expense_colon"
                    android:textColor="@color/colorBlack"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/txv_expense"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:textColor="@color/colorBlack"
                    android:textStyle="bold"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:id="@+id/txv_balance_colon"
                    android:text="@string/balance_colon"
                    android:textColor="@color/colorBlack"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/txv_balance"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:textColor="@color/colorBlack"
                    android:textStyle="bold"/>
            </TableRow>
        </TableLayout>

        <FrameLayout
            android:id="@+id/frl_tab2_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>